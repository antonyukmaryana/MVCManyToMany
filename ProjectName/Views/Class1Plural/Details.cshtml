@{
  Layout = "_Layout";
}

@model ProjectName.Models.Class1;

<h2>Category Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.Class2Plural.Count == 0)
{
  <p>This category does not contain any items</p>
}
else
{
  <h4>Items the category contains:</h4>
  <ul>
  @foreach(var join in Model.Items)
  {
    <li>@join.Class2.Description</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to categories", "Index")</p>
<p>@Html.ActionLink("Edit Category", "Edit", new { id = Model.Class1Id })</p>
<p>@Html.ActionLink("Delete Category", "Delete", new { id = Model.Class1Id })</p>